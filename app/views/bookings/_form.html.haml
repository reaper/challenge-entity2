= simple_form_for [@listing, @booking], html: { class: "mt-6" } do |f|
  = f.input :start_date, html: { class: "w-full" }
  = f.input :end_date

  .sm:col-span-2.sm:flex.sm:justify-end.space-x-4
    = button_to "Back", listing_path(@listing), class: "my-2 bg-blue-300 hover:bg-blue-700 text-white font-bold text-sm py-2 px-4 rounded"
    = f.button :submit, "Send", type: :submit
